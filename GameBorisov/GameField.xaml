<Window x:Class="GameBorisov.GameField"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameBorisov"
        mc:Ignorable="d"
        Title="GameField" Height="450" Width="638">
    <Grid>
        <Image HorizontalAlignment="Center" Height="433" VerticalAlignment="Center" Width="651" Source="/game.png"/>
        <Canvas Name="Canvas" Margin="124,57,124,56"/>
        <Label x:Name="score" Content="0" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="31" Width="46" Background="White"/>
        <Button Content="Заново" HorizontalAlignment="Left" Margin="373,10,0,0" VerticalAlignment="Top" Height="31" Width="106" Click="Button_Click"/>
        <Label Content="Время" HorizontalAlignment="Left" Margin="76,13,0,0" VerticalAlignment="Top" Background="#FFF7F5F5"/>
        <Label x:Name="timerLabel" Content="60" HorizontalAlignment="Left" Margin="138,14,0,0" VerticalAlignment="Top" Height="23" Width="45" Background="White"/>
    </Grid>
</Window>
